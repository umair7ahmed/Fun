source 'https://rubygems.org'

gem 'rails'
gem 'bcrypt-ruby'
gem 'bootstrap-sass'

group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'shoulda-matchers'
  gem 'guard-rspec'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :test do
  gem 'factory_girl_rails'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'launchy'
  gem 'therubyrhino'
  gem 'cucumber-rails'
end

group :production do
  gem 'pg'
  gem 'thin'
end
